<Window x:Class="Lab_rab_1_Safin_R.R.БПИ_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_rab_1_Safin_R.R.БПИ_23_02"
        mc:Ignorable="d"
        Title="Расчет возраста и дней до 50-летия" Height="450" Width="800" MinHeight="300" MinWidth="700">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия работника" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Оклад работника" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Дата рождения" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBox x:Name="SurnameTextBox" Grid.Row="1" Grid.Column="0" FontSize="16" VerticalAlignment="Center" ToolTip="Введите фамилию (только буквы)" PreviewTextInput="SurnameTextBox_PreviewTextInput"/>
        <TextBox x:Name="SalaryTextBox" Grid.Row="1" Grid.Column="1" FontSize="16" VerticalAlignment="Center" ToolTip="Введите числовое значение оклада"/>
        <DatePicker x:Name="BirthDatePicker" Grid.Row="1" Grid.Column="2" FontSize="16" VerticalAlignment="Center" ToolTip="Выберите дату рождения"/>

        <Button x:Name="CalculateButton" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Content="ПОДСЧИТАТЬ" FontSize="18" FontWeight="Bold" 
                Padding="10" Click="CalculateButton_Click"/>

        <TextBlock x:Name="AgeTextBlock" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" FontSize="16" HorizontalAlignment="Center"/>
        <TextBlock x:Name="DaysTo50TextBlock" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" FontSize="16" HorizontalAlignment="Center"/>
    </Grid>
</Window>
